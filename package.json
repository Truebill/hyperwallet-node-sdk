{
  "name": "hyperwallet-sdk",
  "version": "1.3.1",
  "description": "A library to manage users, transfer methods and payments through the Hyperwallet API",
  "main": "lib/index.js",
  "dependencies": {
    "node-jose": "^1.0.0",
    "object-assign": "^4.1.0",
    "superagent": "^4.0.0",
    "tslint": "^5.20.0"
  },
  "scripts": {
    "lint": "eslint ./src && eslint ./test && eslint ./examples",
    "prod": "babel src -d lib",
    "docs": "esdoc -c ./.esdoc.json",
    "deploy-docs": "npm run docs && gh-pages -d docs",
    "test": "npm run lint && npm run test-unit",
    "test-unit": "tsc -b test && mocha",
    "tdd": "tsc -b test -w & mocha -w",
    "test-coverage": "babel-node ./node_modules/.bin/isparta cover _mocha -- test/**/*.js test/*.js",
    "coveralls": "npm run test-coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "prepublish-prod": "npm test && npm run prod",
    "publish-please": "publish-please",
    "prepublish": "publish-please guard"
  },
  "mocha": {
    "ui": "bdd",
    "spec": "test/**/*.spec.js",
    "require": [
      "source-map-support/register"
    ],
    "watch-files": [
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperwallet/rest-v3-node-sdk.git"
  },
  "keywords": [
    "hyperwallet",
    "sdk",
    "rest",
    "bankaccount",
    "payout",
    "creditcard",
    "ach"
  ],
  "author": "Florian Krauthan <fkrauthan@hyperwallet.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyperwallet/rest-v3-node-sdk/issues"
  },
  "homepage": "http://hyperwallet.github.io/rest-v3-node-sdk",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/dirty-chai": "^2.0.2",
    "@types/gh-pages": "^2.0.1",
    "@types/mocha": "^5.2.7",
    "@types/nock": "^11.1.0",
    "@types/node-jose": "^1.1.0",
    "@types/object-assign": "^4.0.30",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.3",
    "@types/superagent": "^4.1.3",
    "chai": "^3.5.0",
    "coveralls": "^3.0.2",
    "dirty-chai": "^1.2.2",
    "esdoc": "^1.1.0",
    "esdoc-importpath-plugin": "0.0.1",
    "gh-pages": "^0.11.0",
    "isparta": "^4.1.1",
    "mocha": "^6.2.1",
    "nock": "^11.4.0",
    "publish-please": "^5.4.3",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.3"
  },
  "engines": {
    "node": ">=0.12",
    "iojs": ">=1.0"
  }
}
